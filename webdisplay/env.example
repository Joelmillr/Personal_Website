# Flight Test Playback Web Display Configuration
# Copy this file to .env and update with your values

# YouTube Video Configuration (REQUIRED)
# Get video ID from YouTube URL: https://www.youtube.com/watch?v=VIDEO_ID_HERE
YOUTUBE_VIDEO_ID=your_video_id_here

# Video sync offset in seconds
# If flight data starts at timestamp 2643.0s but video starts at 0:00, set to 2643.0
# If video starts 10 seconds before flight data, set to -10.0
YOUTUBE_START_OFFSET=0.0

# Server Configuration
HOST=127.0.0.1
PORT=5000
DEBUG=True

# WebSocket URL (for production deployment)
# Set this to your production URL after deployment (e.g., https://your-domain.com)
# Leave empty for auto-detection
WS_URL=
